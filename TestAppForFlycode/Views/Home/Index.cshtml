@model IEnumerable<TestAppForFlycode.Models.Post>
@{
    ViewData["Title"] = "Список ";
   // Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Страничка постов</title>
</head>
<body>

    <p></p>
    <a href="~/Home/Create" class=btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
    <p></p>

    <h3>Посты</h3>
    <table>
        <tr>
            <td>Загаловок</td>
            <td>Описание</td>
            <td>Дата создания</td>
            <td>Картинка</td>
            <td></td>
        </tr>
        @foreach (var post in Model)
        {
            <tr>

                <td>@post.Heading</td>
                <td>@post.Description</td>
                <td>@post.DateOfCreation</td>



            </tr>
            <td><a asp-action="Edit" asp-controller="Home" asp-route-id="@post.Id"><i class="material-icons">create</i></a></td>
            <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@post.Id"><i class="material-icons">delete</i></a></td>

        }
    </table>
</body>
</html>